{
  "name": "dockingmate-playwright-api-server",
  "version": "1.0.0",
  "description": "Express-based API server for DockingMate Playwright E2E tests",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:auth": "playwright test tests/auth/",
    "test:berth": "playwright test tests/berth/",
    "test:dashboard": "playwright test tests/dashboard/",
    "test:profile": "playwright test tests/profile/",
    "test:general": "playwright test tests/general/",
    "report": "playwright show-report",
    "install-browsers": "playwright install",
    "docker:build": "docker build -t dockingmate-e2e-api .",
    "docker:run": "docker run --rm -p 3001:3001 -v $(pwd)/test-results:/app/test-results dockingmate-e2e-api"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "dockingmate",
    "express",
    "api"
  ],
  "author": "DockingMate Testing Team",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1"
  }
}
